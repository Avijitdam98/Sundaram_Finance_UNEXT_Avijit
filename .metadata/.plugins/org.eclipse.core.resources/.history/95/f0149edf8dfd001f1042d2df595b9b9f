package com.abstractclas;

public class EmployeeDemo {
    public static void main(String[] args) {
        
        Employee emp1 = new PermanentEmployee(101, "Avijit", 5000);
        emp1.calculateSalary();
        emp1.displayDetails();

        System.out.println("---------------------------");

        
        Employee emp2 = new TemporaryEmployee(102, "Ajay", 40, 25);
        emp2.calculateSalary();
        emp2.displayDetails();
    }
}
